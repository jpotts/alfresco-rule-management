<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>

    <bean id="webscript.com.metaversant.rules.link-rule.post" class="com.metaversant.alfresco.webscripts.CreateRulesLink" parent="webscript">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="searchService">
            <ref bean="SearchService" />
        </property>
    </bean>

    <bean id="webscript.com.metaversant.rules.move-rule.post" class="com.metaversant.alfresco.webscripts.MoveRules" parent="webscript">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="searchService">
            <ref bean="SearchService" />
        </property>
    </bean>

    <bean id="webscript.com.metaversant.rules.make-shared.post" class="com.metaversant.alfresco.webscripts.ConvertToSharedRule" parent="webscript">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="searchService">
            <ref bean="SearchService" />
        </property>
    </bean>

</beans>
